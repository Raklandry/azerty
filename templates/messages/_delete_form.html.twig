<form style="display: flex;" method="post" action="{{path('delete', {id: message.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer cette message ?');">
    <button style="margin: 0; padding:0"><i class="fa fa-trash-alt text-danger"></i></button>
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ message.id) }}">
</form>
